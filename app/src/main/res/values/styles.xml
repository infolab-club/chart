<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyToolbarTheme"
        parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="textHeader">
        <item name="android:textSize">@dimen/textHeader</item>
        <item name="android:textColor">@color/textHeader</item>
    </style>

    <style name="textItem">
        <item name="android:textSize">@dimen/textItem</item>
        <item name="android:textColor">@color/textItem</item>
    </style>

    <style name="textInstructionBlack">
        <item name="android:textSize">@dimen/textInstruction</item>
        <item name="android:textColor">@color/textInstructionsBlack</item>
    </style>

    <style name="textInstructionGrey">
        <item name="android:textSize">@dimen/textInstruction</item>
        <item name="android:textColor">@color/textInstructionsGrey</item>
    </style>

    <style name="buttonBlue">
        <item name="android:layout_width">@dimen/buttonWidth</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:background">@drawable/btn_blue_pressed_dark_blue</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textButton</item>
    </style>

    <style name="buttonWhite">
        <item name="android:layout_width">@dimen/buttonWidth</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:background">@drawable/btn_white_pressed_grey</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_ocean</item>
        <item name="android:textSize">@dimen/textButton</item>
    </style>
</resources>

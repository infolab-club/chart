<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <stroke android:color="@color/strokeTab" android:width="2dp" />
            <solid android:color="@color/fillTab" />
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90">
            <shape
                android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="@color/strokeTab"
                    />
            </shape>
        </rotate>
    </item>
</layer-list>
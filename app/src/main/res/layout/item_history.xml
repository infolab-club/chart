<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:background="@drawable/style_item_list"
    android:paddingTop="@dimen/itemPaddingTop"
    android:paddingBottom="@dimen/itemPaddingBottom">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/history_test_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Test's Name"
            android:textAppearance="@style/textItem" />

        <TextView
            android:id="@+id/date_of_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:text="History test date"
            android:textSize="@dimen/textItemDate"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/is_loaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="32dp"
        android:layout_weight="1"
        android:layout_gravity="center">
        <View
            android:id="@+id/checkItemHistory"
            android:layout_width="@dimen/itemCyclicSize"
            android:layout_height="@dimen/itemCyclicSize"
            android:layout_gravity="right"
            android:background="@drawable/style_check_off" />
    </LinearLayout>


</LinearLayout>